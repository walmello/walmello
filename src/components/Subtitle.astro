<script>
    import {gsap} from 'gsap'
    import SplitType from 'split-type'
    import { ScrollTrigger } from "gsap/ScrollTrigger";
    gsap.registerPlugin(ScrollTrigger);
    
    new SplitType('.subtitle p')
    
    
    gsap.to('.marquee', {
        scrollTrigger: {
            scrub: true,
            pin: true,
            start: 'top top',
        },
        xPercent: -100
    })

    
    gsap.to('.subtitle .char', {
        scrollTrigger: {
            trigger: '.subtitle',
            scrub: true,
            start: 'top',
            end: 'center'
        },

        opacity: 1,
        stagger: 0.1,
        color: 'var(--white)',
        duration: 1
    })

    const tl = gsap.timeline()

    tl.to('.subtitle .red-circle', {
        scrollTrigger: {
            trigger: '.subtitle',
            scrub: true,
            start: 'top',
            end: 'bottom'
        },

        opacity: 1,
        scale: 300
    }).to('.subtitle p', {
        scrollTrigger: {
            trigger: '.subtitle',
            scrub: true,
            start: 'center',
            end: 'bottom'
        },
        scale: 10
    }).to('.subtitle', {
        scrollTrigger: {
            trigger: '.subtitle',
            scrub: true,
            start: 'center',
            end: 'bottom'
        },
        opacity: 0
    })


    window.addEventListener('mousemove', e => {
        tl.to('.subtitle .red-circle', {
